---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// Load and filter blog posts with the "trail" tag
const trailPosts = (await getCollection('blog'))
  .filter(post => post.data.tags?.includes('Appalachian Trail'))
  .sort((a, b) => new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime());
---

<Layout title="Trail Notes">
  <div style="display: grid; grid-template-columns: 3fr 1fr; gap: 3rem; margin-top: 2rem;">

    <!-- Trail Posts -->
    <section style="display: flex; flex-direction: column; gap: 2rem;">
      {trailPosts.map(post => (
        <article style="
          background: white;
          border: 1px solid #eee;
          border-radius: 12px;
          box-shadow: 0 4px 10px rgba(0,0,0,0.05);
          overflow: hidden;
          transition: box-shadow 0.2s ease;
        ">
          <a href={`/blog/${post.slug}`} style="text-decoration: none; color: inherit;">
            {post.data.image && (
              <img src={post.data.image} alt={post.data.title} style="width: 100%; height: auto; object-fit: cover;" />
            )}
            <div style="padding: 1.5rem;">
              <h2 style="font-size: 1.4rem; margin-top: 0;">{post.data.title}</h2>
              <p style="margin-top: 1rem;">{post.data.description}</p>


              <a href={`/blog/${post.slug}`} style="
                display: inline-block;
                margin-top: 1rem;
                background: #10b981;
                color: white;
                padding: 0.5rem 1rem;
                border-radius: 6px;
                font-weight: 600;
                font-size: 0.9rem;
              ">Read More</a>
            </div>
          </a>
        </article>
      ))}
    </section>

    <!-- Sidebar -->
    <aside>
      <section style="margin-bottom: 2rem;">
        <h3 style="font-size: 1.2rem;">About This Section</h3>
        <p style="font-size: 0.95rem;">
          Trail Notes is where I capture the reflections, routes, and lessons learned from our Appalachian Trail hikes.
        </p>
      </section>
    </aside>
  </div>
</Layout>
