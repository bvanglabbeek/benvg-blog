---
import Layout from '../layouts/Layout.astro';
---

<Layout title="404 – Page Not Found">
  <section style="text-align: center; margin-top: 5rem;">
    <h1 style="font-size: 3rem;">404</h1>
    <p style="font-size: 1.25rem; color: #666;">Oops! That page doesn’t exist.</p>
    <p style="margin-top: 1rem;">
      <a href="/" style="
        display: inline-block;
        margin-top: 1rem;
        background: #10b981;
        color: white;
        padding: 0.75rem 1.5rem;
        border-radius: 6px;
        font-weight: 600;
        font-size: 1rem;
        text-decoration: none;
      ">Return Home</a>
    </p>
  </section>
</Layout>
