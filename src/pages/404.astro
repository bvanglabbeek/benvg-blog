---
import Layout from '../layouts/Layout.astro';
import '../styles/global.css';
---

<Layout title="404 – Page Not Found">
  <section class="error-container">
    <h1 class="error-title">404</h1>
    <p class="error-message">Looks like we've wandered off the trail...</p>
    <div class="error-quote">
      “In an infinite universe, anything is possible — except finding this page.”
    </div>
    <p class="error-action">
      <a href="/" class="error-link">Find Your Way Back</a>
    </p>
  </section>
</Layout>
