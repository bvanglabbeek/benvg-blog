---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// Load blog posts from content collection
const posts = (await getCollection('blog'))
  .filter(post => !post.data.tags?.includes('Appalachian Trail'))
  .sort((a, b) => new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime());

// Sidebar content (optional to make dynamic)
const recentPosts = posts.slice(0, 5).map(p => ({
  title: p.data.title,
  slug: p.slug
}));


// Categories from tags
const tagCount = {};
posts.forEach(post => {
  (post.data.tags || []).forEach(tag => {
    tagCount[tag] = (tagCount[tag] || 0) + 1;
  });
});
const categories = Object.entries(tagCount).map(([name, count]) => ({ name, count }));
---

<Layout title="Ben van Glabbeek">
  <style>
    .page-grid {
      display: grid;
      grid-template-columns: 1fr;
      gap: 2rem;
      max-width: 800px;
      margin-inline: auto;
    }


    aside {
      display: none;
    }

    @media (min-width: 800px) {
      .page-grid {
        grid-template-columns: 3fr 1fr;
        max-width: 1200px;
      }

      aside {
        display: block;
      }
    }
  </style>

    <div class="page-grid" style="margin-top: 2rem;">

    <!-- Blog Posts -->
    <section style="display: flex; flex-direction: column; gap: 2rem;">
      {posts.map(post => (
        <article style="
          background: white;
          border: 1px solid #eee;
          border-radius: 12px;
          box-shadow: 0 4px 10px rgba(0,0,0,0.05);
          overflow: hidden;
          transition: box-shadow 0.2s ease;
        ">
          <a href={`/blog/${post.slug}`} style="text-decoration: none; color: inherit;">
            {post.data.image && (
              <img src={post.data.image} alt={post.data.title} style="width: 100%; height: auto; object-fit: cover;" />
            )}
            <div style="padding: 1.5rem;">
              <h2 style="font-size: 1.4rem; margin-top: 0;">{post.data.title}</h2>
              <p style="margin-top: 1rem;">{post.data.description}</p>

              <!-- Tags -->
              {post.data.tags && (
                <div style="margin-top: 1rem;">
                  {post.data.tags.map(tag => (
                    <span style="
                      display: inline-block;
                      background: #f3f4f6;
                      color: #111;
                      font-size: 0.75rem;
                      padding: 4px 10px;
                      border-radius: 9999px;
                      margin-right: 0.5rem;
                    ">
                      {tag}
                    </span>
                  ))}
                </div>
              )}

              <a href={`/blog/${post.slug}`} style="
                display: inline-block;
                margin-top: 1rem;
                background: #10b981;
                color: white;
                padding: 0.5rem 1rem;
                border-radius: 6px;
                font-weight: 600;
                font-size: 0.9rem;
              ">Read More</a>
            </div>
          </a>
        </article>
      ))}
    </section>

    <!-- Sidebar -->
    <aside>
      <section style="margin-bottom: 2rem;">
        <h3 style="font-size: 1.2rem;">Recent Posts</h3>
        <ul style="list-style: none; padding: 0; font-size: 0.95rem;">
          {recentPosts.map(post => (
            <li style="margin-bottom: 0.5rem;">
              <a href={`/blog/${post.slug}`} style="color: #333;">{post.title}</a>
            </li>
          ))}
        </ul>
      </section>

      <section>
        <h3 style="font-size: 1.2rem;">Categories</h3>
        <ul style="list-style: none; padding: 0; font-size: 0.95rem;">
          {categories.map(cat => (
            <li style="margin-bottom: 0.5rem;">
              <a href={`/category/${cat.name.toLowerCase().replace(/\s/g, '-')}`} style="color: #333;">
                {cat.name} ({cat.count})
              </a>
            </li>
          ))}
        </ul>
      </section>
    </aside>
  </div>
</Layout>
