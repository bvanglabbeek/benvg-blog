---
import Layout from '../layouts/Layout.astro';

// Dynamically load blog posts from Markdown files
const postImports = import.meta.glob('../content/blog/*.md');
const postPromises = Object.entries(postImports).map(async ([path, resolver]) => {
  const { metadata } = await resolver();
  return {
    ...metadata,
    slug: path.split('/').pop().replace('.md', '')
  };
});
const posts = (await Promise.all(postPromises))
  .sort((a, b) => new Date(b.date).getTime() - new Date(a.date).getTime()); // Newest first

// Sidebar placeholders (optional: make dynamic later)
const recentPosts = posts.slice(0, 5).map(p => ({ title: p.title, slug: p.slug }));
const archives = ["October 2023", "July 2023", "April 2018", "September 2016"];
const categories = [
  { name: "Agile Methods", count: 4 },
  { name: "AI", count: 2 },
  { name: "Culture", count: 2 }
];
---

<Layout title="Ben van Glabbeek">
  <div style="display: grid; grid-template-columns: 3fr 1fr; gap: 3rem; margin-top: 2rem;">

    <!-- Blog Posts -->
    <section style="display: flex; flex-direction: column; gap: 2rem;">
      {posts.map(post => (
        <article style="
          background: white;
          border: 1px solid #eee;
          border-radius: 12px;
          box-shadow: 0 4px 10px rgba(0,0,0,0.05);
          overflow: hidden;
          transition: box-shadow 0.2s ease;
        ">
          <a href={`/blog/${post.slug}`} style="text-decoration: none; color: inherit;">
            {post.image && (
              <img src={post.image} alt={post.title} style="width: 100%; height: auto; object-fit: cover;" />
            )}
            <div style="padding: 1.5rem;">
              <h2 style="font-size: 1.4rem; margin-top: 0;">{post.title}</h2>
              <p style="font-size: 0.875rem; color: #666;">
                {new Date(post.date).toLocaleDateString(undefined, { month: 'long', day: 'numeric', year: 'numeric' })} &nbsp;|&nbsp;
                Written by <strong>{post.author}</strong>
              </p>
              <p style="margin-top: 1rem;">{post.excerpt}</p>

              <!-- Tags -->
              {post.tags && (
                <div style="margin-top: 1rem;">
                  {post.tags.map(tag => (
                    <span style="
                      display: inline-block;
                      background: #f3f4f6;
                      color: #111;
                      font-size: 0.75rem;
                      padding: 4px 10px;
                      border-radius: 9999px;
                      margin-right: 0.5rem;
                    ">
                      {tag}
                    </span>
                  ))}
                </div>
              )}

              <a href={`/blog/${post.slug}`} style="
                display: inline-block;
                margin-top: 1rem;
                background: #10b981;
                color: white;
                padding: 0.5rem 1rem;
                border-radius: 6px;
                font-weight: 600;
                font-size: 0.9rem;
              ">Read More</a>
            </div>
          </a>
        </article>
      ))}
    </section>

    <!-- Sidebar -->
    <aside>
      <section style="margin-bottom: 2rem;">
        <h3 style="font-size: 1.2rem;">Recent Posts</h3>
        <ul style="list-style: none; padding: 0; font-size: 0.95rem;">
          {recentPosts.map(post => (
            <li style="margin-bottom: 0.5rem;">
              <a href={`/blog/${post.slug}`} style="color: #333;">{post.title}</a>
            </li>
          ))}
        </ul>
      </section>

      <section style="margin-bottom: 2rem;">
        <h3 style="font-size: 1.2rem;">Archives</h3>
        <ul style="list-style: none; padding: 0; font-size: 0.95rem;">
          {archives.map(archive => (
            <li style="margin-bottom: 0.5rem;">
              <a href="#" style="color: #333;">{archive}</a>
            </li>
          ))}
        </ul>
      </section>

      <section>
        <h3 style="font-size: 1.2rem;">Categories</h3>
        <ul style="list-style: none; padding: 0; font-size: 0.95rem;">
          {categories.map(cat => (
            <li style="margin-bottom: 0.5rem;">
              <a href={`/category/${cat.name.toLowerCase().replace(/\s/g, '-')}`} style="color: #333;">
                {cat.name} ({cat.count})
              </a>
            </li>
          ))}
        </ul>
      </section>
    </aside>
  </div>
</Layout>
