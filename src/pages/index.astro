---
import Layout from '../layouts/Layout.astro';

const posts = [
  {
    title: "Navigating Uncertainty: Harness the Power of Frequent Custom...",
    excerpt: "Do you ever feel lost in the ever-changing business landscape? You’re not alone. Navigating this ever-changing world can feel like an impossible task...",
    slug: "/blog/navigating-uncertainty",
    date: "2023-10-21",
    author: "Ben VG",
    image: "https://via.placeholder.com/600x400?text=Ocean+Uncertainty",
    tags: ["Agile Methods", "Culture"]
  },
  {
    title: "My New Cozy Blanket",
    excerpt: "It’s a tranquil evening, with a crackling fire in the background. You are comfortably nestled on the couch, free to choose your adventure...",
    slug: "/blog/my-new-cozy-blanket",
    date: "2023-07-30",
    author: "Ben VG",
    image: "https://via.placeholder.com/600x400?text=Cozy+Blanket",
    tags: ["AI"]
  }
];

const recentPosts = posts.map(p => p.title);
const archives = ["October 2023", "July 2023", "April 2018", "September 2016"];
const categories = [
  { name: "Agile Methods", count: 4 },
  { name: "AI", count: 1 },
  { name: "Appalachian Trail", count: 1 },
  { name: "Culture", count: 4 }
];
---

<Layout title="Ben van Glabbeek">
  <div style="display: grid; grid-template-columns: 3fr 1fr; gap: 3rem; margin-top: 2rem;">

    <!-- Blog Posts -->
    <section style="display: flex; flex-direction: column; gap: 2rem;">
      {posts.map(post => (
        <article style="
          background: white;
          border: 1px solid #eee;
          border-radius: 12px;
          box-shadow: 0 4px 10px rgba(0,0,0,0.05);
          overflow: hidden;
          transition: box-shadow 0.2s ease;
        ">
          <a href={post.slug} style="text-decoration: none; color: inherit;">
            <img src={post.image} alt={post.title} style="width: 100%; height: auto; object-fit: cover;" />
            <div style="padding: 1.5rem;">
              <h2 style="font-size: 1.4rem; margin-top: 0;">{post.title}</h2>
              <p style="font-size: 0.875rem; color: #666;">
                {new Date(post.date).toLocaleDateString(undefined, { month: 'long', day: 'numeric', year: 'numeric' })} &nbsp;|&nbsp;
                Written by <strong>{post.author}</strong>
              </p>
              <p style="margin-top: 1rem;">{post.excerpt}</p>

              <!-- Tags -->
              <div style="margin-top: 1rem;">
                {post.tags.map(tag => (
                  <span style="
                    display: inline-block;
                    background: #f3f4f6;
                    color: #111;
                    font-size: 0.75rem;
                    padding: 4px 10px;
                    border-radius: 9999px;
                    margin-right: 0.5rem;
                  ">
                    {tag}
                  </span>
                ))}
              </div>

              <a href={post.slug} style="
                display: inline-block;
                margin-top: 1rem;
                background: #10b981;
                color: white;
                padding: 0.5rem 1rem;
                border-radius: 6px;
                font-weight: 600;
                font-size: 0.9rem;
              ">Read More</a>
            </div>
          </a>
        </article>
      ))}
    </section>

    <!-- Sidebar -->
    <aside>
      <section style="margin-bottom: 2rem;">
        <h3 style="font-size: 1.2rem;">Recent Posts</h3>
        <ul style="list-style: none; padding: 0; font-size: 0.95rem;">
          {recentPosts.map(title => (
            <li style="margin-bottom: 0.5rem;"><a href="#" style="color: #333;">{title}</a></li>
          ))}
        </ul>
      </section>

      <section style="margin-bottom: 2rem;">
        <h3 style="font-size: 1.2rem;">Archives</h3>
        <ul style="list-style: none; padding: 0; font-size: 0.95rem;">
          {archives.map(archive => (
            <li style="margin-bottom: 0.5rem;"><a href="#" style="color: #333;">{archive}</a></li>
          ))}
        </ul>
      </section>

      <section>
        <h3 style="font-size: 1.2rem;">Categories</h3>
        <ul style="list-style: none; padding: 0; font-size: 0.95rem;">
          {categories.map(cat => (
            <li style="margin-bottom: 0.5rem;">
              <a href={`/category/${cat.name.toLowerCase().replace(/\s/g, '-')}`} style="color: #333;">
                {cat.name} ({cat.count})
              </a>
            </li>
          ))}
        </ul>
      </section>
    </aside>
  </div>
</Layout>
