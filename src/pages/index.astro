---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import '../styles/global.css';

// Load blog posts from content collection
const allPosts = (await getCollection('blog'))
  .filter(post => !post.data.tags?.includes('Appalachian Trail'))
  .sort((a, b) => new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime());

// Get recent posts for main content (latest 6)
const posts = allPosts.slice(0, 6);

// Sidebar content
const recentPosts = allPosts.slice(0, 5).map(p => ({
  title: p.data.title,
  slug: p.slug
}));

// Categories from tags
const tagCount = {};
allPosts.forEach(post => {
  (post.data.tags || []).forEach(tag => {
    tagCount[tag] = (tagCount[tag] || 0) + 1;
  });
});
const categories = Object.entries(tagCount).map(([name, count]) => ({ name, count }));
---

<Layout title="Ben van Glabbeek">
  <style>
    .page-grid {
      display: grid;
      grid-template-columns: 1fr;
      gap: 2rem;
      max-width: 1400px;
      margin-inline: auto;
      padding: 0 2rem;
    }

    aside {
      display: none;
    }

    @media (min-width: 800px) {
      .page-grid {
        grid-template-columns: 3fr 1fr;
      }

      aside {
        display: block;
      }
    }

    .view-all-posts {
      text-align: center;
      margin-top: 3rem;
    }

    aside {
      background-color: rgb(var(--gray-50));
      border-radius: 12px;
      padding: 2rem;
      box-shadow: 0 2px 8px rgba(var(--black), 0.05);
    }

    .sidebar-section {
      padding-bottom: 1.25rem;
      border-bottom: 1px solid rgba(var(--black), 0.1);
      margin-bottom: 1.25rem;
    }

    .sidebar-section:last-child {
      padding-bottom: 0;
      border-bottom: none;
      margin-bottom: 0;
    }

    .sidebar-title {
      font-size: 1.25rem;
      font-weight: 600;
      margin-bottom: 0.75rem;
      color: rgb(var(--black));
    }

    .sidebar-list {
      list-style: none;
      padding: 0;
      margin: 0;
    }

    .sidebar-item {
      margin-bottom: 0.5rem;
    }

    .sidebar-item:last-child {
      margin-bottom: 0;
    }

    .sidebar-link {
      color: rgb(var(--gray-600));
      text-decoration: none;
      transition: color 0.2s ease;
      font-size: 0.95rem;
      display: block;
      padding: 0.25rem 0;
    }

    .sidebar-link:hover {
      color: var(--accent);
    }
  </style>

  <div class="page-grid">
    <!-- Blog Posts -->
    <div class="main-content">
      <div class="blog-posts-grid">
        {posts.map(post => (
          <article class="article-card">
            <a href={`/blog/${post.slug}`} class="article-link">
              {post.data.image && (
                <img src={post.data.image} alt={post.data.title} class="article-image" />
              )}
              <div class="article-content">
                <h2 class="article-title">{post.data.title}</h2>
                <p class="article-description">{post.data.description}</p>

                <!-- Tags -->
                {post.data.tags.map(tag => (
                  <a 
                    href={`/category/${tag.toLowerCase().replace(/\s/g, '-')}`} 
                    class="tag"
                  >
                    {tag}
                  </a>
                ))}

                <a href={`/blog/${post.slug}`} class="button">Read More</a>
              </div>
            </a>
          </article>
        ))}
      </div>
    </div>

    <!-- Sidebar -->
    <aside>
      <section class="sidebar-section">
        <h3 class="sidebar-title">Recent Posts</h3>
        <ul class="sidebar-list">
          {recentPosts.map(post => (
            <li class="sidebar-item">
              <a href={`/blog/${post.slug}`} class="sidebar-link">{post.title}</a>
            </li>
          ))}
        </ul>
      </section>

      <section class="sidebar-section">
        <h3 class="sidebar-title">Categories</h3>
        <ul class="sidebar-list">
          {categories.map(cat => (
            <li class="sidebar-item">
              <a href={`/category/${cat.name.toLowerCase().replace(/\s/g, '-')}`} class="sidebar-link">
                {cat.name} ({cat.count})
              </a>
            </li>
          ))}
        </ul>
      </section>
    </aside>
  </div>
</Layout>
