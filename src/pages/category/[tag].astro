---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import '../../styles/global.css';

// Generate all tag paths
export async function getStaticPaths() {
  const posts = await getCollection('blog');
  const tagMap = new Map();

  // Collect all unique tags and their original casing
  posts.forEach(post => {
    (post.data.tags || []).forEach(tag => {
      tagMap.set(tag.toLowerCase().replace(/\s+/g, '-'), tag);
    });
  });

  return Array.from(tagMap).map(([slug, originalTag]) => ({
    params: { tag: slug },
    props: { originalTag }
  }));
}

// Get props and params
const { originalTag } = Astro.props;
const { tag } = Astro.params;
const posts = await getCollection('blog');

// Filter posts by this tag
const filteredPosts = posts.filter(post =>
  (post.data.tags || []).some(t => t.toLowerCase().replace(/\s+/g, '-') === tag)
);

// Sidebar: recent posts
const recentPosts = posts
  .filter(p => !p.data.tags?.includes('Appalachian Trail'))
  .sort((a, b) => new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime())
  .slice(0, 5)
  .map(p => ({ title: p.data.title, slug: p.slug }));

// Sidebar: tag counts
const tagCount = {};
posts.forEach(post => {
  (post.data.tags || []).forEach(tag => {
    tagCount[tag] = (tagCount[tag] || 0) + 1;
  });
});
const categories = Object.entries(tagCount).map(([name, count]) => ({ name, count }));

---

<Layout title={`Posts tagged: ${originalTag}`}>
  <div class="page-grid">
    <!-- Main content -->
    <div class="main-content">
      <h1 class="category-title">{originalTag}</h1>

      {filteredPosts.length === 0 ? (
        <p>No posts found in this category.</p>
      ) : (
        <div class="blog-posts-grid">
          {filteredPosts.map(post => (
            <article class="article-card">
              <a href={`/blog/${post.slug}`} class="article-link">
                {post.data.image && (
                  <img src={post.data.image} alt={post.data.title} class="article-image" />
                )}
                <div class="article-content">
                  <h2 class="article-title">{post.data.title}</h2>
                  <p class="article-description">{post.data.description}</p>
                  <a href={`/blog/${post.slug}`} class="button">Read More</a>
                </div>
              </a>
            </article>
          ))}
        </div>
      )}
    </div>

    <!-- Sidebar -->
    <aside>
      <section class="sidebar-section">
        <h3 class="sidebar-title">Recent Posts</h3>
        <ul class="sidebar-list">
          {recentPosts.map(post => (
            <li class="sidebar-item">
              <a href={`/blog/${post.slug}`} class="sidebar-link">{post.title}</a>
            </li>
          ))}
        </ul>
      </section>

      <section class="sidebar-section">
        <h3 class="sidebar-title">Categories</h3>
        <ul class="sidebar-list">
          {categories.map(cat => (
            <li class="sidebar-item">
              <a href={`/category/${cat.name.toLowerCase().replace(/\s/g, '-')}`} class="sidebar-link">
                {cat.name} ({cat.count})
              </a>
            </li>
          ))}
        </ul>
      </section>
    </aside>
  </div>
</Layout>

<style>
  .category-title {
    font-size: 3.5rem;
    margin-bottom: 3rem;
    color: rgb(var(--black));
    font-weight: 700;
    line-height: 1.1;
    position: relative;
  }

  .category-title::after {
    content: '';
    display: block;
    width: 60px;
    height: 4px;
    background: var(--accent);
    margin-top: 1rem;
  }

  .main-content {
    width: 100%;
  }

  aside {
    background-color: rgb(var(--gray-50));
    border-radius: 12px;
    padding: 2rem;
    box-shadow: 0 2px 8px rgba(var(--black), 0.05);
    height: fit-content;
  }

  .sidebar-section {
    padding-bottom: 1.25rem;
    border-bottom: 1px solid rgba(var(--black), 0.1);
    margin-bottom: 1.25rem;
  }

  .sidebar-section:last-child {
    padding-bottom: 0;
    border-bottom: none;
    margin-bottom: 0;
  }

  .sidebar-title {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 0.75rem;
    color: rgb(var(--black));
  }

  .sidebar-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .sidebar-item {
    margin-bottom: 0.5rem;
  }

  .sidebar-item:last-child {
    margin-bottom: 0;
  }

  .sidebar-link {
    color: rgb(var(--gray-600));
    text-decoration: none;
    transition: color 0.2s ease;
    font-size: 0.95rem;
    display: block;
    padding: 0.25rem 0;
  }

  .sidebar-link:hover {
    color: var(--accent);
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .category-title {
      font-size: 2.5rem;
    }
  }
</style>

